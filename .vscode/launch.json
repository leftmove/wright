  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Debugger",
      "type": "debugpy",
      "request": "launch",
      "python": ".venv/bin/python",
      "cwd": "${workspaceFolder}/platform",
      "module": "fastapi",
      "args": ["dev", "main.py"]
    },
    {
      "name": "Python Debugger: Module",
      "type": "debugpy",
      "request": "launch",
      "python": ".venv/bin/python",
      "cwd": "${workspaceFolder}/platform",
      "module": "lib.markup"
    }
  ]
}
